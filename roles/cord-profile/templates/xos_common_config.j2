; xos_common_config
; generated by platform-install/roles/cord-profile

[plc]
name=plc
deployment=plc

[db]
name=xos
user=postgres
password=password
host=xos_db
port=5432

[api]
host=localhost
port=8000
ssl_key=None
ssl_cert=None
ca_ssl_cert=None
ratelimit_enabled=0
omf_enabled=0
mail_support_address=support@localhost
nova_enabled=True
logfile=/var/log/xos.log

[nova]
admin_user=admin@domain.com
admin_password=admin
admin_tenant=admin
url=http://localhost:5000/v2.0/
default_image=None
default_flavor=m1.small
default_security_group=default
ca_ssl_cert=/etc/ssl/certs/ca-certificates.crt

[observer]
pretend=False
backoff_disabled=True
images_directory=/opt/xos/images
dependency_graph=/opt/xos/model-deps
logfile=/var/log/xos_backend.log
save_ansible_output=True

[gui]
disable_minidashboard={{ disable_minidashboard }}
branding_name={{ gui_branding_name }}
branding_icon={{ gui_branding_icon }}
branding_favicon={{ gui_branding_favicon }}
branding_bg={{ gui_branding_bg }}
{% if gui_service_view_class %}
service_view_class={{ gui_service_view_class }}
{% endif %}

{% if use_vtn %}
[networking]
use_vtn=True
{% endif %}
